# Upgrade/Connection map (declare once)
map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}

# Redirect HTTP → HTTPS (web UI on 443)
server {
    listen 80;
    listen [::]:80;
    server_name rt.329.run;
    return 301 https://$host$request_uri;
}

# Web UI + API via 443
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name rt.329.run;

    ssl_certificate     /etc/letsencrypt/live/rt.329.run-0001/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/rt.329.run-0001/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;

    # API paths to backend
    location ~ ^/(auth|telemetry|commands|devices|alerts|users|websocket)(/|$) {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
    }

    # Everything else → web UI
    location / {
        proxy_pass http://127.0.0.1:8100;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
    }
}

# Direct HTTPS API entry on 8443 (for mobile app)
server {
    listen 8443 ssl http2;
    listen [::]:8443 ssl http2;
    server_name rt.329.run;

    ssl_certificate     /etc/letsencrypt/live/rt.329.run-0001/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/rt.329.run-0001/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
    }
}
